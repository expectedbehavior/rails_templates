!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %title= yield(:title) || controller.controller_name.capitalize
    = javascript_include_tag :defaults, :cache => (Rails.env.production? || Rails.env.staging?)
  %body
    .nav
      - if current_user
        = link_to "Logout", [:logout]
        = link_to "Profile", current_user
      - else
        = link_to "Login", [:login]
        = link_to "Signup", [:signup]
    .main
      #flash
        - unless flash.empty?
          = content_tag :div, flash[:notice],  :class => "notice"  if flash[:notice]
          = content_tag :div, flash[:warning], :class => "warning" if flash[:warning]
          = content_tag :div, flash[:error],   :class => "error"   if flash[:error]
          = content_tag :div, flash[:success], :class => "success" if flash[:success]
      #content
        = yield
